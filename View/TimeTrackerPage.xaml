<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestApplication.View.TimeTrackerPage"
             Title="TimeTrackerPage"
             xmlns:local="clr-namespace:TestApplication.View">
    <StackLayout>
    <local:DateTimePicker x:Name="dateTimePicker" SelectedDateTime="{Binding SelectedDateTime, Mode=TwoWay}"/>
    <Label Text="{Binding SelectedDateTime, StringFormat='{0:MM/dd/yyyy hh:mm tt}'}"/>
    <Button Text="Show selected date and time" Clicked="Button_Clicked"/>
    </StackLayout>
</ContentPage>